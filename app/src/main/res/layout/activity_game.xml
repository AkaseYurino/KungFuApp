<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/game_bg"/>
    
    <FrameLayout
        android:layout_width="362sp"
        android:layout_height="72sp"
        android:background="@drawable/button_shape2"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/result_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_time"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center" />
    </FrameLayout>
    
    <ImageView
        android:id="@+id/shampoo"
        android:layout_width="399dp"
        android:layout_height="515dp"
        android:layout_marginTop="130dp"
        android:src="@drawable/game_shampoo1" />

    <FrameLayout
        android:id="@+id/tap_button"
        android:layout_width="286dp"
        android:layout_height="79dp"
        android:background="@drawable/button_shape3"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="60dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onitap"
            android:textSize="36dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_gravity="center" />

    </FrameLayout>
            
</FrameLayout>